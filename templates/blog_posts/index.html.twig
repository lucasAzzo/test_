{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <br><div class="card-panel">
            <table width="100%" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in data %}
                    <tr>
                        <td>{{ row.title }}</td>
                        <td><a type="button" class="btn btn-sm" href="{{path('blog_posts_show', {'id': row.id})}}">Detail</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
